{
  "compilerOptions": {
    "declaration": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "outDir": "lib",
    "lib": [
      "es2015",
      "es2015.collection",
      "dom",
      "es2015.iterable",
      "es2017.object"
    ],
    "types": ["jest"],
    "jsx": "react",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "test/**/*"],
  "references": [
    {
      "path": "."
    }
  ]
}
